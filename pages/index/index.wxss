@import "../../styles/loading.wxss";

page {
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
  background-color: #fff;
}

.header image {
  height: 80rpx;
  width: 100rpx;
  margin-top: 10rpx;
}

.nav-scroll {
  display: flex;
  white-space: nowrap;
  width: 70%;
}

.nav-item {
  display: inline-block;
  margin: 0 20rpx 0 0;
}

.nav-active {
  color: #fc975c;
}

.select-address {
  /* background-color: #fff; */
  margin: 0rpx 40rpx 0 40rpx;
  padding: 30rpx 0 0 0;
  position: relative;
}

.didi-btn {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background-color: #4a4c5b;
  color: #fff;
  border-radius: 0;
  margin-top: 40rpx;
}

.start-nav,
.end-nav {
  position: relative;
  margin: 0 0 0 8%;
}

.start-nav {
  border-bottom: 1rpx solid #f5f5f5;
}

.start-nav::before,
.end-nav::before {
  position: absolute;
  top: 40%;
  left: -6%;
  content: "";
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.start-nav::before {
  background-color: #3cbca3;
}

.end-nav::before {
  background-color: #fc9153;
}

.start-nav > input,
.end-nav > input {
  height: 100rpx;
  font-size: 40rpx;
  color: #333;
}

.wait-text {
  color: #666;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 0 0 3%;
}

.members-img > image {
  height: 102rpx;
  width: 90rpx;
}

.express {
  margin: 60rpx 0 0 0;
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
}

.members-desc {
  text-align: center;
}

.slide-img {
  width: 100%;
  height: 100%;
}

.top-swiper {
  height: 300rpx;
  margin-top: 40rpx;
}

.down-swiper {
  height: 170rpx;
}

.select-price {
  /* width: 90%; */
  background: #fff;
  margin-top: 20px;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  color: #333;
}
.sp-top {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f6f6f6;
  padding-bottom: 20rpx;
}
.sp-down {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;

}
.sp-img {
  width: 140rpx;
  height: 60rpx;
  padding: 20rpx 0;
}
.sp-down > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: scale(0.7);
  opacity: 0.5;
  color: #333;
}
.sp-down .price-active {
  opacity: 1;
  transform: scale(1);
}

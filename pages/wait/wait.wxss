/* pages/wait/wait.wxss */
page {
  background: #f5f7f8;
  height: 100%;
}
.wait {
  justify-content: center;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 20rpx;
}
.top {
  padding: 40rpx 10rpx;
}
.top-text {
  color: #fb9659;
}

.middle {
  margin-top: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.middle > view:first-child {
  font-size: 40rpx;
}
.middle > view:nth-child(2) {
  font-size: 28rpx;
  padding: 40rpx 0;
}
.down {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #E7E7E7;
  margin-bottom: 40rpx;
}
.down > text {
  display: inline-block;
  /* width: 50%; */
  width: calc(50% - 3rpx);
  text-align: center;
}
.down > text:nth-child(1) {
  border-right: 1rpx solid #E7E7E7;
}
.progress_bg {
  position: absolute;
  width: 450rpx;
  height: 450rpx;
  top: 200rpx;
}
.progress_text {
  position: absolute;
  top: 350rpx;
}
.progress_info {
  text-align: center;
}
.progress_time {
  color: #f6d135;
  font-size: 60rpx;
}
